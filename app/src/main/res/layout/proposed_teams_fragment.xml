<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.footballnewsmanager.fragments.proposed_settings.teams.ProposedTeamsViewModel" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragments.proposed_settings.teams.ProposedTeamsFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Drużyny"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="30sp"
        android:textStyle="bold|italic"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Wybierz interesujące Cię drużyny z polecanych"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="6dp"
        android:textSize="20sp"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/proposed_teams_loading"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewModel.loadingVisibility ? View.VISIBLE : View.GONE }">

            <View
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="56dp"
                android:background="@drawable/ic_ball_v2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/loading"
                android:textColor="#fff"
                android:textSize="26sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/proposed_teams_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:visibility="@{viewModel.itemsVisibility ? View.VISIBLE : View.GONE }"
            app:postRunnable="@{viewModel.postRunnable}"
            app:recyclerViewAdapter="@{viewModel.recyclerViewAdapter}"
            />
    </RelativeLayout>

</LinearLayout>
</layout>
