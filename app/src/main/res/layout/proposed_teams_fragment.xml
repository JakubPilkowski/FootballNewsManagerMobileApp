<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.footballnewsmanager.fragments.proposed_settings.teams.ProposedTeamsViewModel" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragments.proposed_settings.teams.ProposedTeamsFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Drużyny"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="30sp"
        android:textStyle="bold|italic"
         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Wybierz interesujące Cię drużyny z polecanych"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="6dp"
        android:textSize="20sp"
         />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/proposed_teams_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:postRunnable="@{viewModel.postRunnable}"
        app:recyclerViewAdapter="@{viewModel.recyclerViewAdapter}"
        />
</LinearLayout>
</layout>
