<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.footballnewsmanager.activites.auth.AuthActivityViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        tools:context=".activites.auth.AuthActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_background_auth_slider"
                />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="80dp"
                android:elevation="24dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="Logo"
                android:src="@drawable/ic_logo_news" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:text="@string/dzienne_setki_nowych_news_w"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorTextPrimary"
                android:textSize="24sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/auth_background"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/app_logo_name"
                android:textStyle="bold|italic"
                android:textColor="@color/colorTextPrimary"
                android:textAlignment="center"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Zaczynamy"
                android:textColor="@color/colorTextPrimary"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                android:drawablePadding="36dp"
                android:background="@drawable/button_with_back_and_radius"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:text="Logowanie"
                android:foreground="?selectableItemBackground"
                android:textSize="20sp"
                android:textColor="@color/colorTextPrimary"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:textAllCaps="false"
                android:text="Zapomniałem hasła"
                android:foreground="?selectableItemBackground"
                android:textSize="20sp"
                android:textColor="@color/colorTextPrimary"
                />

        </LinearLayout>
    </LinearLayout>
</layout>
