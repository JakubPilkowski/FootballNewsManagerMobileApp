<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.footballnewsmanager.fragments.main.profile.ProfileFragmentViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.footballnewsmanager.helpers.LoadingView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.loadingVisibility ? View.VISIBLE : View.GONE}" />

        <com.example.footballnewsmanager.helpers.ErrorView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.errorVisibility ? View.VISIBLE : View.GONE}"
            app:errorStatus="@{viewModel.status}"
            app:errorTryAgainListener="@{viewModel.tryAgainListener}"
            />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/profile_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.itemsVisibility ? View.VISIBLE : View.GONE }"
            app:onSwipeRefreshListener="@{viewModel.swipeRefreshListenerObservable}"
            app:setColorScheme="@{viewModel.swipeRefreshColor}">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:text="@{viewModel.name}"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold|italic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/statistics"
                            android:textAlignment="center"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/profile_ring" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="@{viewModel.teamsCount}"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="36sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/teams"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/profile_ring" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="@{viewModel.likes}"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="36sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/likes_de"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:text="@{viewModel.date}"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/managment"
                            android:textAlignment="center"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/profile_item_ripple"
                        android:gravity="center_vertical"
                        android:onClick="@{()-> viewModel.onManageTeamsClick()}"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/teams"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_arrow_forward_white_32dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/profile_item_ripple"
                        android:gravity="center_vertical"
                        android:onClick="@{()-> viewModel.onLikedNewsClick()}"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/liked"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_arrow_forward_white_32dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/profile_item_ripple"
                        android:gravity="center_vertical"
                        android:onClick="@{()->viewModel.languageClick()}"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/language"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@{viewModel.languageDrawable}"
                            android:drawablePadding="6dp"
                            android:text="@{viewModel.currentLanguage}"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="20sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/proposed_teams"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:checked="@={viewModel.proposedNews}"
                            android:switchMinWidth="56dp"
                            android:thumb="@drawable/switch_thumb_on"
                            android:track="@drawable/track_selector"
                            app:switchChangeListener="@{viewModel.proposedNewsChangeListenerAdapter}" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account"
                            android:textAlignment="center"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/profile_item_ripple"
                        android:gravity="center_vertical"
                        android:onClick="@{()-> viewModel.onLogoutClick()}"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/logout"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_exit_to_app" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/profile_item_ripple"
                        android:gravity="center_vertical"
                        android:onClick="@{()-> viewModel.onDeleteAccountClick()}"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/delete_account"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_close_green" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>
</layout>
