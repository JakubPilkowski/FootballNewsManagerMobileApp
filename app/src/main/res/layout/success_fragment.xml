<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.footballnewsmanager.fragments.auth.success_fragment.SuccessViewModel" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.auth.success_fragment.SuccessFragment">

    <com.example.footballnewsmanager.fragments.auth.success_fragment.AnimatedSuccessView
        android:id="@+id/success_animated_view"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@drawable/success_screen_background"
        />
    <TextView
        android:id="@+id/success_message"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/colorTextPrimary"
        android:text="Poprawnie zmieniono hasÅ‚o"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_with_back_and_radius"
        android:onClick="@{()->viewModel.onNextClick()}"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:text="@string/next"
        android:textColor="@color/buttonColor"
        android:textSize="20sp" />
</LinearLayout>
</layout>
