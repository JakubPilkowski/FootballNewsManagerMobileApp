<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:navigationBarColor">#006400</item>
    </style>


    <style name="AuthTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor"> @color/colorbackgroundPrimary</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="android:statusBarColor">@color/colorbackgroundSecondary</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeErrorColor">@color/errorColor</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="errorTextColor"> @color/errorColor</item>
        <item name="errorTextAppearance">@style/ErrorLabel</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ErrorLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ProgressDialogTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorbackgroundPrimaryOpacity</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="ResetPasswordTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor"> @color/colorbackgroundPrimary</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="android:statusBarColor">@color/colorbackgroundSecondary</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>


    <style name="ProposedSettings" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor"> @color/colorbackgroundPrimary</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="LanguageDialogTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorbackgroundPrimaryOpacity</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor"> @color/colorbackgroundPrimary</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="android:statusBarColor">@color/colorbackgroundSecondary</item>

        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:colorControlActivated">@android:color/white</item>
    </style>

    <style name="SearchActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor"> @color/colorbackgroundPrimary</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="android:statusBarColor">@color/colorbackgroundSecondary</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:colorControlActivated">@android:color/white</item>
    </style>

    <style name="NewsForTeamActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor"> @color/colorbackgroundPrimary</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="android:statusBarColor">@color/colorbackgroundSecondary</item>
    </style>

</resources>
